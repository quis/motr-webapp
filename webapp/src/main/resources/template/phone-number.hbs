{{#partial "content" }}

    <div class="grid-row">

        <div class="column-two-thirds">

            <a href="{{back_url}}" class="link-back">{{back_button_text}}</a>

            <h1 class="heading-xlarge">What is your mobile number?</h1>

            {{#message}}
                {{> partial/error-message }}
            {{/message}}

            {{#showSystemError}}
                {{> partial/system-error }}
            {{/showSystemError}}

            <form method="POST" autocomplete="off" novalidate="">

                <div class="form-group {{#message}}form-group-error{{/message}}">
                    <label for="phoneNumber" class="form-label">
                        Mobile phone number
                        {{#message}}<span class="error-message">{{ message }}</span>{{/message}}
                        <span class="form-hint">Your reminder will be sent here</span>
                    </label>

                    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" value="{{phoneNumber}}">

                </div>

                <div class="form-group">
                    <input type="submit" value="{{continue_button_text}}" class="button" id="continue">
                </div>

            </form>

        </div>

    </div>

{{/partial}}
