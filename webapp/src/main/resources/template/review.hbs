{{#partial "content" }}

    <div class="grid-row u-space-b30">

        <div class="column-two-thirds">

            <h1 class="heading-xlarge">Check your details</h1>

            <p>Make sure the vehicle and your {{correctContactType}} are correct.</p>

            <h2 class="heading-medium">Vehicle details</h2>

            <table class="key-value-list">

                <tbody>

                    <tr>
                        <th class="key-value-list__key">Registration number</th>
                        <td class="key-value-list__value">{{viewModel.registration}}</td>
                        <td class="key-value-list__item-action"><a id="change-registration-link" href="{{url this "/vrm"}}">Change<span class="visuallyhidden"> vehicle registration</span></a></td>
                    </tr>

                    <tr>
                        <th class="key-value-list__key">Make</th>
                        <td class="key-value-list__value" colspan="2">{{viewModel.make}}</td>
                    </tr>

                    <tr>
                        <th class="key-value-list__key">Model</th>
                        <td class="key-value-list__value" colspan="2">{{viewModel.model}}</td>
                    </tr>

                    <tr>
                        <th class="key-value-list__key">Colour</th>
                        <td class="key-value-list__value" colspan="2">{{viewModel.colour}}</td>
                    </tr>

                    <tr>
                        <th class="key-value-list__key">Year of manufacture</th>
                        <td class="key-value-list__value" colspan="2">{{viewModel.yearOfManufacture}}</td>
                    </tr>

                    <tr>
                        <th class="key-value-list__key">MOT expiry date</th>
                        <td class="key-value-list__value" colspan="2">{{viewModel.expiryDate}}</td>
                    </tr>

                </tbody>

            </table>

        </div>

    </div>

    <div class="grid-row">

        <div class="column-two-thirds">

            <details>
                <summary role="button">
                    <span class="summary">Incorrect vehicle details?</span>
                </summary>
                <div class="panel panel-border-narrow">
                    <p>If you think any of the vehicle details are wrong, <a href="https://www.gov.uk/contact-dvsa/y/mot-vehicle-tests-and-approval" target="_blank">contact DVSA</a></p>
                </div>
            </details>

        </div>

    </div>

    <div class="grid-row u-space-b30">

        <div class="column-two-thirds">

            <h2 class="heading-medium">Your details</h2>

            <table class="key-value-list">

                <tbody>

                    <tr>
                        <th class="key-value-list__key">{{viewModel.contactType}}</th>
                        <td class="key-value-list__value">{{viewModel.contact}}</td>
                        <td class="key-value-list__item-action"><a id={{changeContactId}} href={{url this changeContactUrl}}>Change <span class="visuallyhidden">{{viewModel.contactType}}</span></a></td>
                    </tr>

                </tbody>

            </table>

        </div>

    </div>

    <div class="grid-row">

        <div class="column-two-thirds">

            <form method="POST">
                <div class="form-group">
                    <input id="continue-button" type="submit" value="Continue" class="button">
                </div>
            </form>

        </div>

    </div>

{{/partial}}
